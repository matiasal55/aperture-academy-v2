extends ../components/master
block estilo
    - estilos="contacto"
    - js="contacto"
    - direccion="."
block content
    section
        .contacto
            .formulario-contacto
                h1 Formulario de contacto
                    form(action="")
                        div
                            label(for="nombre")
                            input(type="text", name="nombre" placeholder="Nombre")
                            span *
                        div
                            label(for="apellido")
                            input(type="text", name="apellido" placeholder="Apellido")
                            span *
                        div
                            label(for="email")
                            input(type="text", name="email" placeholder="Email")
                            span *
                        div
                            label(for="telefono")
                            input(type="tel", name="telefono" placeholder="Telefono")
                            span *
                        div
                            textarea(name="consulta", cols="30", rows="10" placeholder="Ingrese su consulta")
                        div
                            p Los campos con * son obligatorios
                        div
                            button(type="submit") Enviar
                            button(type="reset") Borrar los datos introducidos
            .datos-empresa
                h1 Datos de contacto
                p Dirección: 
                    span Av. Florencio Varela 1903, B1754 San Justo, Buenos Aires.
                p Teléfono: 
                    span 011 4480-8900
                p E-mail: 
                    span apertureacademy@gmail.com
                p Horario: 
                    span Lunes a viernes: 8:30 a 21:00 hs. - Sábados: 10:30 a 18:00 hs.
    section
        .ubicacion.tituloSeccion
            h1 Ubicación
