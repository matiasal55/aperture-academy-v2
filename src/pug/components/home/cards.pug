include ../lista-de-cursos

- const cursos=[docker, java, python];

.tituloSeccion
    h1 Cursos Destacados
.cards
    each curso in cursos
        div
            .imagen
                img(src=`./img/${curso.titulo}.jpg`)
            .titulo
                h1 #{curso.titulo}
            .horas
                h4 #{curso.horas}hs
            .detalles
                input(type="button" value="Buscar")
                a(href=`./cursos/${curso.titulo}.html`)